{
  "name": "booster-car-wash-kiosk",
  "version": "0.1.0",
  "description": "부스터 세차 키오스크 애플리케이션",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "vite build && electron-builder",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "web": "vite",
    "deploy": "electron-builder build --win --publish always"
  },
  "author": "Booster Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.5",
    "dotenv": "^16.0.3",
    "electron-log": "^4.4.8",
    "electron-updater": "^6.3.9",
    "modbus-serial": "^8.0.17",
    "node-hid": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "rxjs": "^7.8.1",
    "serialport": "^10.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.1",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^3.2.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "vite": "^5.1.4",
    "wait-on": "^8.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sam3ha2/booster_kiosk.git"
  },
  "build": {
    "appId": "kr.co.boosteron.kiosk",
    "productName": "Booster Car Wash Kiosk",
    "files": [
      "dist/**/*",
      "src/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
