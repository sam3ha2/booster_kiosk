{
  "name": "booster-car-wash-kiosk",
  "version": "1.0.0",
  "description": "부스터 세차 키오스크 애플리케이션",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "vite build && electron-builder",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "web": "vite"
  },
  "author": "Booster Team",
  "license": "ISC",
  "dependencies": {
    "@yudiel/react-qr-scanner": "^1.1.9",
    "axios": "^1.3.5",
    "dotenv": "^16.0.3",
    "modbus-serial": "^8.0.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "serialport": "^10.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.1",
    "electron-builder": "^25.1.7",
    "electron-devtools-installer": "^3.2.0",
    "electron-log": "^4.4.8",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "vite": "^5.1.4",
    "wait-on": "^8.0.1"
  }
}
